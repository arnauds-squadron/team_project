<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHighlight">@color/white_transparent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#00FFFFFF</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/view_background</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="spinner_dropdown_style1" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rounded_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@xml/rounded_button</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rounded_button_filled">
        <item name="android:background">@xml/rounded_button_filled</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_view_message">
        <item name="android:background">@xml/rounded_text</item>
        <item name="android:breakStrategy" tools:targetApi="m">simple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_input_layout_login" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="text_input_layout_hint_login" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_input_edit_text_login" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/colored_cursor</item>
        <item name="android:ems">10</item>
    </style>

    <style name="input_field_review">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
